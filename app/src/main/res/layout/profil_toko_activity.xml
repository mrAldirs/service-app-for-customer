<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        app:cardElevation="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:strokeColor="@color/underline"
        app:strokeWidth="1dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profil_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/market"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24dp"/>

        <TextView
            android:id="@+id/profil_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rukin Servis Elektronik"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="84dp"/>

        <TextView
            android:id="@+id/profil_nohp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="081249710599"
            android:textSize="14sp"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:layout_marginStart="84dp"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:layout_marginTop="16dp"
        android:text="Kontak Toko"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:drawableRight="@drawable/next"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        app:cardElevation="0dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/email"
            android:layout_gravity="center_vertical"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/red_200"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="76dp"/>

        <TextView
            android:id="@+id/profil_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aldialputra@gmail.com"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:layout_marginStart="76dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:src="@drawable/next"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline"
            android:layout_gravity="bottom"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="11"
        android:layout_marginTop="16dp"
        android:text="Biaya Admin Pembelian"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:drawableRight="@drawable/next"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Televisi"
            android:ems="5"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.12500"
            android:layout_marginStart="4dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/underline"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="152dp"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC"
            android:ems="5"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.15000"
            android:layout_marginStart="4dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/underline"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="152dp"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handphone"
            android:ems="5"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.5000"
            android:layout_marginStart="4dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/underline"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="152dp"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laptop"
            android:ems="5"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.12000"
            android:layout_marginStart="4dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/underline"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="152dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/profil_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/location_toko"
        android:text="Jajar, Kec. Wates, Kabupaten Kediri, Jawa Timur 64174"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/red_200"
        app:strokeWidth="2dp"
        app:cardCornerRadius="16dp">

        <WebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.card.MaterialCardView>

</androidx.appcompat.widget.LinearLayoutCompat>