<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EDEDED"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:backgroundTint="#00000000"
            app:tint="@color/black"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/jdLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bree_serif"
            android:text="Email Anda"
            android:paddingHorizontal="1dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="16dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="86dp"
                app:strokeWidth="1dp"
                android:layout_marginHorizontal="16dp"
                app:strokeColor="@color/underline"
                app:cardElevation="8dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="@color/underline"/>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/email"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Terverifikasi"
                    android:layout_marginStart="76dp"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anda tidak dapat mendaftarkan Akun lain dengan Email yang sama!"
                    android:layout_marginStart="76dp"
                    android:layout_marginTop="36dp"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Terdaftar"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/emailEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="example@gmail.com"
                android:layout_marginStart="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUbahEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="36dp"
                android:text="Ganti Email"
                android:textAllCaps="false"
                android:textColor="@color/red_500"
                app:strokeWidth="1dp"
                app:strokeColor="@color/red_500"
                app:cornerRadius="24dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>